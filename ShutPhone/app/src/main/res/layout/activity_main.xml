<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.phihai.ShutPhone.Activities.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/start_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:layout_marginBottom="79dp"
        android:layout_above="@+id/quit_button"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/quit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quit"
        android:layout_marginBottom="23dp"
        android:layout_marginStart="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Chronometer
        android:id="@+id/chronometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:layout_above="@+id/start_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dp" />

    <TextView
        android:id="@+id/showpoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Points: "
        android:layout_alignBaseline="@+id/points_view"
        android:layout_alignBottom="@+id/points_view"
        android:layout_alignStart="@+id/quit_button" />

    <TextView
        android:id="@+id/points_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/achievements_button"
        android:layout_toEndOf="@+id/showpoints" />
    <Button
        android:text="Achievements"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/achievements_button"
        android:onClick="showAchievements"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />



</RelativeLayout>
