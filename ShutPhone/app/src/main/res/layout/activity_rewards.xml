<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="5dp"
    android:orientation="vertical"
    tools:context="com.example.phihai.ShutPhone.Activities.RewardActivity"
    android:weightSum="1">

    <TextView
        android:id="@+id/showPoints2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Collected Points:"
        android:layout_marginTop="28dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/points_view2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="108dp"
        android:layout_alignBaseline="@+id/showPoints2"
        android:layout_alignBottom="@+id/showPoints2"
        android:layout_alignParentStart="true" />

    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="30dp"
    android:id="@+id/linearLayout">


    <ListView

        android:id="@+id/listview_achievements"
        android:layout_width="match_parent"
        android:layout_height="452dp"
        android:layout_below="@+id/showpoints2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp">



    </ListView>

    </LinearLayout>


</RelativeLayout>
